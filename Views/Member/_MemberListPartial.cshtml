@model List<UserModel>

<table class="table table-hover table-sm">
    <thead>
        <tr>
            <th>Fullname</th>
            <th>Username</th>
            <th>Locked</th>
            <th>Role</th>
            <th>Created At</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (UserModel user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Username</td>
                <td>
                    @if (user.Locked)
                    {
                        <i class="fa fa-check text-success"></i>
                    }
                    else
                    {
                        <i class="fa fa-times text-danger"></i>
                    }
                </td>
                <td>@user.Role</td>
                <td>@user.CreateAt</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-info btn-sm text-white"><i class="fa fa-edit me-2"></i>Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" onclick="return confirm('Are you sure want to delete this user : @user.Username ?')" class="btn btn-danger btn-sm"><i class="fa fa-trash me-2"></i>Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>
